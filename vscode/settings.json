// 既定の設定を上書きするには、このファイル内に設定を挿入します
{
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "editor.minimap.enabled": false,
    "workbench.editor.enablePreview": false,
    "vim.easymotion": true,
    "vim.hlsearch": true,
    "vim.normalModeKeyBindings":
    [
        {
            "before": ["<C-j>"],
            "after": [":"]
        },
        {
            "before": ["<C-m>"],
            "after": ["<Enter>"]
        },
        {
            "before": ["<ESC>", "<ESC>"],
            "after": [],
            "commands":
            [
                {
                    "command": ":nohl"
                }
            ]
        },
        {
            // leaderキーを実行する
            "before": ["<space>"],
            "after": ["\\", "\\"]
        },
        {
            "before": ["<C-k>"],
            "after": ["*"]
        },
        {
            "before": ["Y"],
            "after": ["y", "$"]
        }
    ],
    "vim.insertModeKeyBindings":
    [
        {
            "before": ["<C-k>"],
            "after": ["*"]
        }
    ],
    "vim.handleKeys":
    {
        // Vimプラグインに届かなくなっているキーを届くようにする
        "<C-d>": true
    },

    "files.exclude":
    {
        "**/*.meta": true,
        "Library": true,
        "Temp": true
    },
    "window.zoomLevel": 1,

    "editor.acceptSuggestionOnCommitCharacter": false,
    "vim.easymotionMarkerMargin": 4,
    "editor.autoClosingBrackets": "never"
}